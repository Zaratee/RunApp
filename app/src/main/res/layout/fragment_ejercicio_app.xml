<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Chronometer
        android:id="@+id/chro_fragmentEje1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:textSize="70dp"/>

    <TextView
        android:id="@+id/txtV_pasosfragmentEje1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:text="00"/>

    <ListView
        android:id="@+id/listVmusica_fragmentEje1"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@+id/txtV_pasosfragmentEje1"
        android:layout_marginTop="40dp"></ListView>
    <Button
        android:id="@+id/btnStart_fragmentEje1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnPause_fragmentEje1"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"/>
    <Button
        android:id="@+id/btnPause_fragmentEje1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Pause"
        android:layout_marginBottom="20dp"/>
    <Button
        android:id="@+id/btnStop_fragmentEje1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnPause_fragmentEje1"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:text="Stop"/>
</RelativeLayout>